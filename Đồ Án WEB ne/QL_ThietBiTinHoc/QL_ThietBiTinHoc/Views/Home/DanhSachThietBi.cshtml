@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
}

@using QL_ThietBiTinHoc.Models;
@*@using PagedList.Mvc;
@model PagedList.PagedList<ThietBi>*@
@model List<SanPham>
<div class="row">
    <div class="col-sm-3">
        <div class="left-sidebar">
            <h2 style="color:#ff4654; margin-top:10px">Loại Sản Phẩm</h2>
            <div class="panel-group category-products">
                @Html.Action("DanhMucLoai", "Home")
            </div>
            <div class="left-sidebar">
                <h2 style="color:#ff4654">Nhà Sản Xuất</h2>
                <div class="panel-group category-products">
                    @Html.Action("DanhMucNhaSanXuat", "Home")
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-9 padding-right">
        <div class="features_items">
            <h2 class="title text-center" style="color:#ff4654;margin-top:10px">Sản Phẩm</h2>
            @foreach (var tb in Model)
            {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <a href="@Url.Action("ChiTietThietBi", "Home", new { ma = @tb.MaSanPham })">
                                    <img src="~/Content/images/@tb.AnhBia" height="250px" alt="" /></a>
                                <h2 style="color: red">@tb.GiaBan VNĐ</h2>
                                @if (tb.TenSanPham.Length > 30)
                                {
                                    <p>
                                        <strong title="@tb.TenSanPham">@tb.TenSanPham.Substring(0, 30)...</strong>
                                        <br />                                   
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <strong title="@tb.TenSanPham">@tb.TenSanPham</strong>
                                        <br />
                                    </p>
                                }
                                <a href="@Url.Action("ThemGioHang", "GioHang", new { ma = @tb.MaSanPham })" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Chọn mua</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @*<div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("DanhSachThietBi", new { page = page }))
        </div>
        <style>
            .MenuTrang li {
                display: inline;
            }
        </style>*@
    </div>
</div>

