@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using QL_ThietBiTinHoc.Models;
@model List<ThietBi>
<div class="row">
    <div id="wrapper">
        <div class="slider-wrapper theme-default">
            <div id="slider" class="nivoSlider">
                <img src="~/Content/images/slide1.jpg" data-thumb="~/Content/images/slide1.jpg" alt="" />
                <img src="~/Content/images/slide2.jpg" data-thumb="~/Content/images/slide2.jpg" alt="" />
                <img src="~/Content/images/slide3.jpg" data-thumb="~/Content/images/slide3.jpg" alt="" data-transition="slideInLeft" />
                <img src="~/Content/images/slide2.jpg" data-thumb="~/Content/images/slide2.jpg" alt="" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <div class="left-sidebar">
            <h2 style="color:#33CCFF">Danh Mục Thiết Bị</h2>
            <div class="panel-group category-products">
                @Html.Action("DanhMucLoai", "Home")
            </div>
            <div class="left-sidebar">
                <h2 style="color:#33CCFF">Nhà Sản Xuất</h2>
                <div class="panel-group category-products">
                    @Html.Action("DanhMucNhaSanXuat", "Home")
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-9 padding-right">
        <div class="features_items">
            <h2 class="title text-center" style="color:#33CCFF">Thiết Bị</h2>
            @foreach (var tb in Model.Take(6))
            {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <a href="@Url.Action("ChiTietThietBi", "Home", new { ma = @tb.MaThietBi })">
                                    <img src="~/Content/images/@tb.AnhBia" alt="" /></a>
                                <h2 style="color:#CD2626">@tb.GiaBan VNĐ</h2>
                                @if (tb.TenThietBi.Length > 30)
                                {
                                    <p>
                                        <strong title="@tb.TenThietBi">@tb.TenThietBi.Substring(0, 30)...</strong>
                                        <br />                                   
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <strong title="@tb.TenThietBi">@tb.TenThietBi</strong>
                                        <br />
                                    </p>
                                }
                                <a href="@Url.Action("ThemGioHang", "GioHang", new { ma = @tb.MaThietBi })" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Chọn mua</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
